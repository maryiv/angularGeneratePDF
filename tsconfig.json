{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"],
      "@components/*": ["app/modules/shared/components/*"],
      "@models/*": ["app/modules/shared/models/*"],
      "@services/*": ["app/modules/core/services/*"]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
